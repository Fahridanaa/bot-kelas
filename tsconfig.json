{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src/",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@commands": ["commands"],
      "@baseCommands": ["baseCommands"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["tests", "tsconfig.json"]
}
